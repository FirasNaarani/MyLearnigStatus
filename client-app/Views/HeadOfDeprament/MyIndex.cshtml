@model LearnSchoolApp.Entities.HeadOfDeprament

    <html>
    <head>
        <style>
            table {
                border-collapse: collapse;
                background-color: whitesmoke;
                width: 100%;
                border: 1px solid #ddd;
                border-spacing: 30px;
                box-shadow: 0 10px 10px #033740;
            }

            button {
                color: black;
                padding: 50px;
                text-align: center;
                text-decoration: double;
                display: inline-block;
                font-size: 20px;
                margin: 10px 5px;
                cursor: pointer;
                border-radius: 20%;
                width: 235px;
                height: 235px;
                box-shadow: 0 10px 10px #2b519f;
            }

            img {
                width: fit-content;
                height: fit-content;
            }
        </style>
    </head>
    <body>
        <div class="text-center">
            <h4>@Model.name שלום</h4>
            <hr />
        </div>
        <table>
            <tr>
                <td rowspan="2"><img src="https://www.visualinfomedia.com/images/web-development-banner.png" /></td>
                <td>
                    <button style=" background-color: greenyellow;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index">סטודנטים</a>
                    </button>
                </td>
                <td>
                    <button style=" background-color: dodgerblue;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Project" asp-action="Index">פרויקטים</a>
                    </button>
                </td>
            </tr>
            <tr>
                <td>
                    <button style=" background-color:orange;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Guide" asp-action="Index">מנחים</a>
                    </button>
                </td>
                <td>
                    <button style=" background-color: brown;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="HeadOfDeprament" asp-action="Index">ניהול</a>
                    </button>
                </td>
            </tr>
        </table>
    </body>
    </html>
