@model IEnumerable<LearnSchoolApp.Entities.Project>

<html>
<head>
    <style>
        body {
            text-align: left;
            background-image: url(https://media.istockphoto.com/vectors/watercolor-seamless-background-with-green-hexagon-tiles-vector-id1212124417?k=20&m=1212124417&s=612x612&w=0&h=DQ_M1UGj4e2JiJDs8SGJ3RgIk_8myxNuGtyb2OKQFeI=);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        footer {
            background: rgb(255 255 255 / 80%);
        }

        table {
            box-shadow: 0 10px 10px #033740;
        }

        td {
            text-align: center;
            padding: 8px;
        }

        th {
            background-color: white;
            text-align: center;
        }

        tr:nth-child(even) {
            background-color: #D6EEEE;
        }

        tr:nth-child(2n+1) {
            background-color: #a2dbcb;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h4>פרויקטים</h4>
        <hr />
        @if (TempData["AlertMessage"] != null)
        {
            <div class="alert alert-success">
                <i>@TempData["AlertMessage"]</i>
            </div>
        }
    </div>
    <center>
        @{
            if (Model.Count() > 0)
            {
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>
                                פרויקט מס
                            </th>
                            <th>
                                שם פרויקט
                            </th>
                            <th>
                                סטודנטים בפרויקט
                            </th>
                            <th>
                                פרויקט סטטוס
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    <ol>
                                        <li>
                                            <details>
                                                <summary>@Html.DisplayFor(modelItem => item.studentName)</summary>
                                                @Html.DisplayFor(modelItem => item.studentId)
                                            </details>
                                        </li>
                                        @if (item.assistantStudentName != null)
                                        {
                                            <li>
                                                <details>
                                                    <summary>@Html.DisplayFor(modelItem => item.assistantStudentName)</summary>
                                                    @Html.DisplayFor(modelItem => item.assistantStudentId)
                                                </details>
                                            </li>
                                        }
                                    </ol>
                                </td>
                                <td>
                                    @{
                                        if (item.isPass)
                                        {
                                            <i><b><label><ins>מאושר</ins></label></b></i>
                                        }
                                        else
                                        {
                                            <i><b><label><ins>לא מאושר</ins></label></b></i>
                                        }
                                    }
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    <h1>אין פרויקטים שייכים אליך במערכת</h1>
                </div>
            }
        }

    </center>
</body>
</html>
