            <select name="userType" id="userType">
                <option value="0">Student</option>
                <option value="1">Guid</option>
                <option value="2">HeadOfDeprament</option>
                <option value="3">Admin</option>
            </select>
            <br />*@

            <button type="submit">Login</button>
        </form>
    </div>

</div>