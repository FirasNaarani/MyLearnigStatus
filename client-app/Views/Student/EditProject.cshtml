@model LearnSchoolApp.Entities.Status

<html>
<head>
    <style>
        body {
            text-align: left;
            background-image: url(https://wallpapercave.com/wp/wp5306486.jpg);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        footer {
            background-color: #ddc4a8de;
        }

        table {
            box-shadow: 0 10px 10px #033740;
        }

        td {
            text-align: center;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #D6EEEE;
        }

        tr:nth-child(2n+1) {
            background-color: #a2dbcb;
        }

        input[type=text], input[type=number], input[type=password], input[type=email] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h4>סטודנט</h4>
        <hr />
        <p>
            @Html.ActionLink("חזרה לרשימת ההנחיות", "ProjectStatus", new { id = Model.projectId })
        </p>
    </div>
    <center>
        <form asp-action="EditProject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table">
                <tbody>
                    <tr hidden>
                        <td>
                            <input asp-for="Id" class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </td>
                        <td>
                            <b><label asp-for="Id" class="control-label"></label></b>
                        </td>
                    </tr>

                    <tr hidden>
                        <td>
                            <input asp-for="projectId" class="form-control" />
                            <span asp-validation-for="projectId" class="text-danger"></span>
                        </td>
                        <td>
                            <b><label asp-for="projectId" class="control-label"></label></b>
                        </td>
                    </tr>

                    <tr hidden>
                        <td>
                            <input asp-for="userId" class="form-control" />
                            <span asp-validation-for="userId" class="text-danger"></span>
                        </td>
                        <td>
                            <b> <label asp-for="userId" class="control-label"></label></b>
                        </td>
                    </tr>

                    <tr hidden>
                        <td>
                            <input asp-for="currentStatus" class="form-control" />
                            <span asp-validation-for="currentStatus" class="text-danger"></span>
                        </td>
                        <td>
                            <b><label asp-for="currentStatus" class="control-label"></label></b>
                        </td>
                    </tr>

                    <tr hidden>
                        <td>
                            <input asp-for="date" class="form-control" />
                            <span asp-validation-for="date" class="text-danger"></span>
                        </td>
                        <td>
                            <b><label asp-for="date" class="control-label"></label></b>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <input class="form-check-input" asp-for="isPass" />
                        </td>
                        <td>
                            <b><label class="form-check-label">אני מאשר</label></b>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2" style="text-align:center">
                            <div class="form-group">
                                <input type="submit" value="עדכן" class="btn btn-success" />
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </form>
    </center>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
