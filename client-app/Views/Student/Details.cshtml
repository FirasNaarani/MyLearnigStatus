@model LearnSchoolApp.Entities.Student

<html>
<head>
    <style>
        body {
            text-align: left;
            background-image: url(https://wallpapercave.com/wp/wp5306486.jpg);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        footer {
            background-color: #ddc4a8de;
        }

        table {
            box-shadow: 0 10px 10px #033740;
        }

        td {
            text-align: center;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #D6EEEE;
        }

        tr:nth-child(2n+1) {
            background-color: #a2dbcb;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h4>הפרופיל</h4>
        <hr />
        <p>
            @Html.ActionLink("עריכה", "Edit", new { id = Model.userId })
            @if (User.IsInRole("Admin"))
            {
                <label>| </label> @Html.ActionLink("מחיקה", "Delete", new { id = Model.userId })
            }
        </p>
    </div>
    <center>
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Id)
                    </td>
                    <td>
                        <b>מס' סידורי</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.userId)
                    </td>
                    <td>
                        <b>ת"ז</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.name)
                    </td>
                    <td>
                        <b>שם</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.username)
                    </td>
                    <td>
                        <b>שם משתמש</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.password)
                    </td>
                    <td>
                        <b>סיסמה</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.email)
                    </td>
                    <td>
                        <b>מייל</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.phone)
                    </td>
                    <td>
                        <b>מס' טלפון</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @{
                            if (Model.isProject)
                            {
                                @Html.ActionLink("פרטים", "GetProject", new { id = Model.userId })
                            }
                            else
                            {
                                <i><b><label><ins>עדיין לא התקיים פרויקט</ins></label></b></i>
                            }
                        }
                    </td>
                    <td>
                        <b>פרויקט</b>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2" style="text-align:center">
                        <div>
                            <a button type="button" class="btn btn-success" asp-action="Index">חזרה לרשימה</a>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </center>
</body>
</html>
