@model LearnSchoolApp.Entities.Student

<div>
    <h4>שלום @Model.name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            מס' סידורי
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            ת"ז
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.userId)
        </dd>
        <dt class="col-sm-2">
            שם
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            שם משתמש
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.username)
        </dd>
        <dt class="col-sm-2">
            סיסמה
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.password)
        </dd>
        <dt class="col-sm-2">
            מייל
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class="col-sm-2">
            מס' טלפון
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.phone)
        </dd>
        <dt class = "col-sm-2">
            הפרויקט סטטוס
        </dt>
        <dd class="col-sm-10">
            @{
                if (Model.isProject)
                {
                    <i><b><label><ins>מאושר</ins></label></b></i>
                }
                else
                {
                    <i><b><label><ins>לא מאושר</ins></label></b></i>
                }
            }
        </dd>
    </dl>
</div>

