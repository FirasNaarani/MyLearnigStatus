@model LearnSchoolApp.Entities.Project

<div>
    <h4>פרויקט</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            פרויקט מס
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            שם פרויקט
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            מנחה
        </dt>
        <dd class="col-sm-10">
            @{
                if (Model.guideId != null)
                {
                    @Html.ActionLink("פרטים", "GetGuide", new { id = Model.guideId })
                }
                else
                {
                    <label>---</label>
                }
            }
        </dd>
        <dt class="col-sm-2">
            סטודנטים בפרויקט
        </dt>
        <dd class="col-sm-10">
            <ol>
                <li>
                    <b>@Html.DisplayFor(model => model.studentId) | @Html.DisplayFor(model => model.studentName)</b>
                </li>
                @if (Model.assistantStudentName != null)
                {
                    <li>
                        <b>@Html.DisplayFor(model => model.assistantStudentId) | @Html.DisplayFor(model => model.assistantStudentName)</b>
                    </li>
                }
            </ol>
        </dd>
        <dt class="col-sm-2">
            פרויקט סטטוס
        </dt>
        <dd class="col-sm-10">
            @{
                if (Model.isPass)
                {
                    <i><b><label><ins>מאושר</ins></label></b></i>
                }
                else
                {
                    <i><b><label><ins>לא מאושר</ins></label></b></i>
                }
            }
        </dd>
    </dl>
</div>
