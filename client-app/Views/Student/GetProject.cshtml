@model LearnSchoolApp.Entities.Project

<html>
<head>
    <style>
        body {
            text-align: left;
            background-image: url(https://media.istockphoto.com/vectors/watercolor-seamless-background-with-green-hexagon-tiles-vector-id1212124417?k=20&m=1212124417&s=612x612&w=0&h=DQ_M1UGj4e2JiJDs8SGJ3RgIk_8myxNuGtyb2OKQFeI=);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        footer {
            background: rgb(255 255 255 / 80%);
        }

        table {
            box-shadow: 0 10px 10px #033740;
        }

        td {
            text-align: center;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #D6EEEE;
        }

        tr:nth-child(2n+1) {
            background-color: #a2dbcb;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h4>פרויקט</h4>
        <hr />
        @if (User.IsInRole("Student"))
        {
            <p>
                @Html.ActionLink("חזרה לפרופיל", "MyInfo")
            </p>
        }
    </div>
    <center>
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Id)
                    </td>
                    <td>
                        <b>מס' פרויקט</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.name)
                    </td>
                    <td>
                        <b> שם פרויקט</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @{
                            if (Model.guideId != null)
                            {
                                @Html.ActionLink("פרטים", "GetGuide", new { id = Model.guideId })
                            }
                            else
                            {
                                <label>---</label>
                            }
                        }
                    </td>
                    <td>
                        <b>מנחה</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        <ol>
                            <li>
                                <b>@Html.DisplayFor(model => model.studentId) | @Html.DisplayFor(model => model.studentName)</b>
                            </li>
                            @if (Model.assistantStudentName != null)
                            {
                                <li>
                                    <b>@Html.DisplayFor(model => model.assistantStudentId) | @Html.DisplayFor(model => model.assistantStudentName)</b>
                                </li>
                            }
                        </ol>
                    </td>
                    <td>
                        <b>סטודנטים בפרויקט</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @{
                            if (Model.isPass)
                            {
                                <i><b><label><ins>מאושר</ins></label></b></i>
                            }
                            else
                            {
                                <i><b><label><ins>לא מאושר</ins></label></b></i>
                            }
                        }
                    </td>
                    <td>
                        <b>פרויקט סטטוס</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @{
                            if (Model.guidingStatuses.Count() > 0)
                            {
                                @Html.ActionLink("פרטים", "ProjectStatus", "Student", new { id = Model.Id })
                            }
                            else
                            {
                                <i><b><label><ins>עדיין אין הנחיות</ins></label></b></i>
                            }
                        }
                    </td>
                    <td>
                        <b>הנחיות המנחה</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @{
                            if (Model.projectStatuses.Count() > 0)
                            {
                                @Html.ActionLink("פרטים", "ProjectStatus", "Project", new { id = Model.Id })
                            }
                            else
                            {
                                <i><b><label><ins>עדיין אין הנחיות</ins></label></b></i>
                            }
                        }
                    </td>
                    <td>
                        <b>הנחיות ראש המגמה</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @{
                            if (Model.PDF != null)
                            {
                                @Html.ActionLink("צפיה", "FileView", "Project", new { id = Model.studentId })
                            }
                            else
                            {
                                <i><b><label><ins>עדיין לא התקבל אישור על הצעת פרויקט</ins></label></b></i>
                            }
                        }
                    </td>
                    <td>
                        <b>הצעת פרויקט</b>
                    </td>
                </tr>
            </tbody>
        </table>
    </center>
</body>
</html>

