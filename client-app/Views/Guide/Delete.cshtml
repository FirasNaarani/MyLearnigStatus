@model LearnSchoolApp.Entities.Guide

<h4>מנחה</h4>
<h3>?האם אתה בטוח שברצונך למחוק את זה</h3>
<div>
    <div>
        @Html.ActionLink("ביטול", "Details", new { id = Model.userId })
    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ת"ז
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.userId)
        </dd>
        <dt class = "col-sm-2">
            שם
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            שם משתמש
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.username)
        </dd>
        <dt class = "col-sm-2">
            מייל
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class = "col-sm-2">
            מס' טלפון
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.phone)
        </dd>
        <dt class = "col-sm-2">
            ראש מגמה
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.isHeadOfDepratment)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="מחיקה" class="btn btn-danger" />
    </form>
</div>
