@model LearnSchoolApp.Entities.Guide

<html>
<head>
    <style>
        body {
            text-align: left;
            background-image: url(https://wallpapercave.com/wp/wp5306486.jpg);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        footer {
            background-color: #ddc4a8de;
        }

        table {
            box-shadow: 0 10px 10px #033740;
        }

        td {
            text-align: center;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #eed6d6;
        }

        tr:nth-child(2n+1) {
            background-color: #dba2a2;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h4>מנחה</h4>
        <h3>?האם אתה בטוח שברצונך למחוק את זה</h3>
        <hr />
        <p>
            @Html.ActionLink("ביטול", "Details", new { id = Model.userId })
        </p>
    </div>
    <center>
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Id)
                    </td>
                    <td>
                        <b>מס' סידורי</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.userId)
                    </td>
                    <td>
                        <b>ת"ז</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.name)
                    </td>
                    <td>
                        <b>שם</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.username)
                    </td>
                    <td>
                        <b>שם משתמש</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.email)
                    </td>
                    <td>
                        <b>מייל</b>
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(model => model.phone)
                    </td>
                    <td>
                        <b>מס' טלפון</b>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2" style="text-align:center">
                        <form asp-action="Delete">
                            <input type="submit" value="מחיקה" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            </tfoot>
        </table>
    </center>
</body>
</html>
