@model LearnSchoolApp.Entities.Guide

<html>
<head>
    <style>
        body {
            background-size: cover;
            background-position: center;
            background-image: url(https://cdn1.vectorstock.com/i/1000x1000/63/40/background-pattern-with-computer-icons-vector-18526340.jpg);
        }

        footer {
            background: rgb(255 255 255 / 80%);
        }

        h4 {
            text-shadow: 0 0 1em #93358f;
        }

        table {
            border-collapse: collapse;
            background-color: #f8f8f8;
            width: 100%;
            border-radius: 1em;
            box-shadow: 0 10px 10px #033740;
        }

        button {
            color: black;
            padding: 50px;
            text-align: center;
            text-decoration: double;
            display: inline-block;
            font-size: 20px;
            margin: 10px 5px;
            cursor: pointer;
            border-radius: 20%;
            width: 235px;
            height: 235px;
            box-shadow: 0 10px 10px #2b519f;
        }

        img {
            width: fit-content;
            height: fit-content;
            border-radius: 1em;
        }

        .title {
            background-color: #f8f8f8;
            border-radius: 1em;
            box-shadow: 0 10px 10px #033740;
        }
    </style>
</head>
<body>
    <div class="text-center title">
        <h4>@Model.name שלום</h4>
        <hr />
    </div>
    <table>
        <tr>
            <td rowspan="2"><img src="https://www.visualinfomedia.com/images/web-development-banner.png" /></td>
            <td>
                <button style=" background-color: greenyellow;">
                    @Html.ActionLink("פרויקטים", "MyProjects", new { id = Model.userId })
                </button>
            </td>
        </tr>
    </table>
</body>
</html>

